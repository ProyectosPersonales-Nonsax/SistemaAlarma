                    <TextBox Name="Inicial" Width="200" TextChanged="TextBox_TextChanged"></TextBox>
                </StackPanel>
                <Button Height="70" Width="250" Margin="0,0,0,100" Click="Button_Click">
                    
                    <TextBlock FontSize="20" Name="Holo">Iniciar Sesion</TextBlock>
                    
                </Button>
            </StackPanel>
            <Image></Image>
        </DockPanel>
